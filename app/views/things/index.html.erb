<p id="notice"><%= notice %></p>

<h1>@placeのモノ一覧</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Name</th>
      <th>Clean day</th>
      <th>Clean frequency</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.place_id %></td>
        <td><%= thing.name %></td>
        <td><%= thing.clean_day %></td>
        <td><%= thing.clean_frequency %></td>
        <td><%= thing.remarks %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


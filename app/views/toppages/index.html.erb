<% if logged_in? %>
  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.place_id %></td>
        <td><%= thing.name %></td>
        <td><%= thing.clean_day %></td>
        <td><%= thing.clean_frequency %></td>
        <td><%= thing.remarks %></td>
    <% end %>
  </tbody>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

</p>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>掃除管理アプリ</h1>
    <div class="row">
      <div class="col-sm-6">
        <h2><%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %></h2>
      </div>
      <div class="col-sm-6">
        <h2><%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-info' %></h2>
      </div>
    </div>
  </div>
</div>
<% end %>